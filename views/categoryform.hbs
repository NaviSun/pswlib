
  <h2 class="tm-text-primary">Оптима-Крым</h2>
  <hr class="mb-5" />
  <div class="row">
    <div class="col-md-8 mx-auto">
      <h2 class="tm-text-primary">Добавить категорию</h2>
      <form
        id="contact-form"
        action="/auth/compendium/createcategory"
        method="POST"
        class="tm-contact-form"
      >
        <div class="input-group mb-3">
          <div class="input-group-prepend">
            <span class="input-group-text" id="basic-addon1">Категория</span>
          </div>
          <input
            type="text"
            class="form-control"
            placeholder="Категория"
            aria-label="Категория"
            aria-describedby="basic-addon1"
            name="categoryName"
          />
        </div>
        <div class="form-group">
          <div class="">
            <button
              type="submit"
              class="btn btn-primary btn-lg btn-block"
            >Добавить</button>
          </div>
        </div>
      </form>
    </div>

  </div>
  <ul class="list-group list-group-flush">
    {{#each category}}
        <li class="list-group-item">{{this.name}}</li>
     {{/each}}
  </ul>
